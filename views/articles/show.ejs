<body class="main-layout">
  <div class="loader_bg">
    <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
  </div>
  <header>
    <div class="head__top">
      <div class="header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
              <div class="full">
                <div class="center-desk">
                  <div class="logo">
                    <a href="/"><img src="/images/long.png" width="200" height="100" alt="#" /></a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
              <nav class="navigation navbar navbar-expand-md navbar-dark cusnav">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04"
                  aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarsExample04">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="/"> Home </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/articles/contact">Contact</a>
                    </li>
                  </ul>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
    <h3 class="awesome pa_wi mt-3"><%= article.title %></h3>
    <div>
      <div style="display: inline-flex; " class="awesome2 pa_wi">
        <h3 class="text-muted">Jonathan Ncha %> |
          <%= article.createdAt.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %></h3>
      </div>
      <div class="post_box padding_bottom1">
        <div width="70" height="50" class="mt-2 mb-3"><%- article.image %></div>
        <div class="fontart">
          <%- article.sanitizedHtml %>
        </div>
        <a href="/" class="btn btn-secondary ">View All Articles</a>
      </div>


      <div class="container mt-5" id="post-comment" >
        <div class="row">
          <div class="col-sm-12 col-md-12 col-12 pb-4">
            <h3 class="awesome pa_wi mt-3" >Comments</h3>
            <%  comments.forEach(comment => { %>
            <div class="mt-4 text-justify float-left commentshow">
              <h4 style="padding: 2px;"><%= comment.name %> |
                <%= comment.createdAt.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>
              </h4>
              <br>
              <p><%= comment.comment %></p>
              <hr>
            </div>
            <% }); %>
          </div>
          <div class="col-sm-12 col-md-12 col-12">
            <form action="/articles/comments/<%= article.id %>" method="post" id="algin-form" class="commentform">
              <div class="form-group">
                <h4>Leave a comment</h4>
                <label for="name">Name</label>
                <input required type="text" name="name" id="name" class="form-control">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input required type="email" name="email" id="email" class="form-control">
              </div>
              <div class="form-group">
                <label for="comment">Comment</label>
                <textarea required name="comment" id="comment" msg cols="30" rows="5" class="form-control"></textarea>
              </div>
              <!-- <div class="form-inline">
                  <input type="checkbox" name="check" id="checkbx" class="mr-1">
                  <label for="subscribe">Subscribe me to the newlettter</label>
                </div> -->
              <div class="form-group">
                <button type="submit" id="post" class="btn btn-secondary">Post Comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
  <footer>
    <div class="footer mt-5 mt-5 sticky-bottom">
      <div class="copyright">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p class="text-right">Â© 2023 JONATHAN NCHA
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/jquery-3.0.0.min.js"></script>
  <script src="/js/custom.js"></script>

</body>

</html>
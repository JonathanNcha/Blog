<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="initial-scale=1, maximum-scale=1">

  <title>Jonathan Ncha</title>
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

  <meta name="keywords" content="Blog, Lifestyle Blog, Travel, Ncha">
  <meta name="description" content="Blog">
  <meta name="author" content="Jonathan Ncha">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/responsive.css">
  <link rel="stylesheet" href="/css/jquery.mCustomScrollbar.min.css">
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css"
    media="screen">
</head>

<body class="main-layout">
  <header>
    <div class="head__top">
      <div class="header">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
              <div class="full">
                <div class="center-desk">
                  <div class="logo">
                    <a href="/"><img src="/images/long.png" width="200" height="100" alt="#" /></a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
              <nav class="navigation navbar navbar-expand-md navbar-dark cusnav2 ">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04"
                  aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarsExample04">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="/"> Home </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link " href="/logout">Logout</a>
                    </li>
                  </ul>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="blog_main">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="titlepage">
            <a href="/articles/new" class="btn btn-large btn-block btn-success">New Article</a>
            <h2 class="mt-3">Recent Posts</h2>
          </div>
        </div>
      </div>

      <% articles.forEach(article => { %>

      <div class="row">
        <div class="col-md-12">
          <div class="our_two_box">
            <div class="row d_flex">
              <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="our_img">
                  <figure><%- article.image %></figure>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="our_text_box">
                  <h3 class="awesome pa_wi"><%= article.title %></h3>
                  <div class="card-subtitle text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString()%> | <%= article.readtime %>
                  </div>
                  <p><%= article.description %></p>
                  <div class="post_box padding_bottom1">
                    <ul class="like mb-2 ">
                      <li><a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a></li>
                      <li><a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a></li>
                      <li>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
      <a href="/articles/new" class="btn btn-large btn-block btn-success mb-5">New Article</a>
    </div>
  </div>
  </div>

  <footer>
    <div class="footer mt-5 mt-5">
      <div class="copyright">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p class="text-right">Â© 2023 JONATHAN NCHA
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/jquery-3.0.0.min.js"></script>
  <script src="/js/custom.js"></script>
</body>

</html>
<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<div class="form-group">
    <label for="readtime">Read Time</label>
    <input value="<%= article.readtime %>" name="readtime" id="readtime" class="form-control">
</div>
<div class="form-group">
    <label for="image">Image</label>
    <input required value="<%= article.image %>" type="text" id="image" name="image" class="form-control">
</div>
<br>
<a href="/articles/index" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>